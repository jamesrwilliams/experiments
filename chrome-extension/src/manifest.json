{
  "name": "HTML Reload Utility",
  "version": "1.0",
  "description": "Dynamically replace contents of a page without using developer tools!",
  "manifest_version": 2,
  "homepage_url": "https://github.com/jamesrwilliams",
  "permissions": ["storage"],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "HTML Replace",
    "default_popup": "ui/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["scripts/content.js"]
    }
  ]
}
